{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "./types/extra.d.ts",
      "./types/deno/lib.esnext",
      "./types/deno/lib",
      "./types/deno/lib.deno.ns",
      "./types/deno/lib.deno.unstable",
    ]
  },
  "include": ["../src"],
}